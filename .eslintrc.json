{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 9,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jest/globals": true
	},
	"plugins": ["react", "prettier", "jsx-a11y", "jest"],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:jsx-a11y/strict",
		"prettier",
		"prettier/react"
	],
	"rules": {
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"prettier/prettier": "warn"
	},
	"settings": {
		"react": {
			"version": "16.0"
		}
	}
}